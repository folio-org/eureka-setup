{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CLI",
            "type": "shell",
            "command": "go",
            "args": ["build", "-o", "./bin/", "."],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$go"]
        }
    ]
}